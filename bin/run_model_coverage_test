#!/bin/bash
set -e
REPO_TOP="$(git rev-parse --show-toplevel)"
EXIT_CODE=0

# Building the flow model from source with coverage flags
cd "$REPO_TOP/ApertureMapModelTools/src"
cp *.F "$REPO_TOP/test/fortran"
cp makefile "$REPO_TOP/test/fortran/model_makefile"

# creating directory and building model with coverage
cd "$REPO_TOP/test/fortran"
make test

# executing test scripts and capturing return codes
set +e

echo ""
echo "Running flow model integration tests."
./test_model_code_coverage
EXIT_CODE=$((EXIT_CODE + $?))

echo ""
echo "Running STRING_MODULE unit tests."
./TEST_STRING_MOD.EXE
EXIT_CODE=$((EXIT_CODE + $?))

echo ""
echo "Running UNIT_CONVERSION_MODULE unit tests."
./TEST_UNIT_CONV_MOD.EXE
EXIT_CODE=$((EXIT_CODE + $?))

echo ""
echo "Running IO_MODULE unit tests."
./TEST_IO_MOD.EXE
EXIT_CODE=$((EXIT_CODE + $?))

# building the coverage report
echo ""
make coverage

# exiting with proper exit code
echo ""
if [ $EXIT_CODE -eq 0 ]
then
    echo "We have lift off!"
    exit 0
else
    echo "Houston, we've had a problem here."
    exit 1
fi
